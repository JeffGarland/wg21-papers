\newenvironment{wgText}[1][]{
  \begingroup
  \lstset{%
      numbers=none,
      backgroundcolor=,
      fillcolor=,
      texcl=true,
      frame=none,
      commentstyle={\rmfamily\itshape\color{comments}},
      basicstyle={\ttfamily\smaller[1]}%
  }
  \let\type=\code
  \rmfamily\smaller[1]
  \par\noindent\hrulefill #1\\
}
{
  \par\noindent\hrulefill
  \endgroup\par
  \vskip1\baselineskip plus 2\baselineskip
}

